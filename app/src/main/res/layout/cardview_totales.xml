<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="Subtotal sin iva"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/lbl_subtotalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:text="valor subtotal"/>
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Subtotal con iva"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/lbl_subtotalcont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="valor subtotalcon"/>
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Iva"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/lbl_ivat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="iva"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Total"/>

    <TextView
        android:id="@+id/lbl_totalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="valor Total"/>


</androidx.cardview.widget.CardView>