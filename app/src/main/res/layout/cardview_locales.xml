<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_localclic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    card_view:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_favorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_favorite_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:id="@+id/btn_cerrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_https_black_24dp" />

                <ImageView
                    android:id="@+id/btn_abierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock_open_black_24dp" />

            </LinearLayout>



        </LinearLayout>



        <ImageView
            android:id="@+id/img_local"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_idlocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_local"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_idlocal"
            android:layout_alignStart="@+id/txt_idlocal"
            android:layout_alignLeft="@+id/txt_idlocal"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_local"
            android:layout_alignStart="@+id/txt_local"
            android:layout_alignLeft="@+id/txt_local"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textColor="#D50000"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/menuDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_local"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_shopping_cart_black_24dp"
            android:transitionName="shared_image"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_recargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuDots"
            android:layout_alignRight="@+id/menuDots"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textColor="#D50000"
            android:textSize="12sp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>