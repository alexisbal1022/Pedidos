            <item>
                <shape>
                    <solid android:color="#FFFFFF" />

                    <stroke android:width="1dip" android:color="@color/colorPrimary" />

                    <padding android:bottom="1dp" android:left="1dp" android:right="15dp" android:top="1dp" />

