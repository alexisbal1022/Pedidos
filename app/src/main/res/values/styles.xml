<resources>

    <!-- Theme.MaterialComponents.Light.NoActionBar Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Habilitar animaciones en las transiciones -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Deshabilitar sobreposición entre animaciones-->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>


        <!-- Transiciones para entrada, salida y elementos compartidos...-->

        <!-- Habilitar superposición de los elementos compartidos entre transiciones -->
        <item name="android:windowSharedElementsUseOverlay">true</item>

    </style>

    <style name="AppThemeT" parent="android:Theme.Material">
        <!--Habilitar animaciones en las transiciones -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Deshabilitar sobreposición entre animaciones-->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>


        <!-- Transiciones para entrada, salida y elementos compartidos...-->

        <!-- Habilitar superposición de los elementos compartidos entre transiciones -->
        <item name="android:windowSharedElementsUseOverlay">true</item>

        <!-- Más definiciones... -->

    </style>

    <style name="estilotexto" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">5dp</item>
    </style>


    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">80dip</item>
        <item name="android:progressDrawable">@drawable/ic_favorite_black_24dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimary</item>

        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>

    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">#212121</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#454343</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#8A8A8A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorSnack</item>
        <item name="rippleColor">@color/favoritosi</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">#757575</item>
        <item name="rippleColor">#a4a4a4</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>


    <style name="AlertDialogThemeBlanco" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">#212121</item>
        <item name="android:background">#FFFFFF</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

</resources>
